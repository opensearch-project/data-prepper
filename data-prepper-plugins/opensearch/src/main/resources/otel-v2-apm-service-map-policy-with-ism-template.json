{
  "policy": {
    "description": "Managing OTel v2 APM service map indices",
    "default_state": "current_write_index",
    "states": [
      {
        "name": "current_write_index",
        "actions": [
          {
            "rollover": {
              "min_size": "10gb",
              "min_index_age": "24h"
            }
          }
        ]
      }
    ],
    "ism_template": {
      "index_patterns": ["otel-v2-apm-service-map-*"]
    }
  }
}