{
  "policy": {
    "description": "Managing custom index rollover",
    "default_state": "current_write_index",
    "states": [
      {
        "name": "current_write_index",
        "actions": [
          {
            "rollover": {
              "min_size": "50gb",
              "min_index_age": "24h"
            }
          }
        ]
      }
    ],
    "ism_template": {
      "priority": 100,
      "index_patterns": ["dummy-pattern-*"]
    }
  }
}
